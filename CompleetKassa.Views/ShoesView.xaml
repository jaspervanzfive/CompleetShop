            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="ShoesListTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Category}" />
                <TextBlock Text="{Binding SubCategory}" />
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
